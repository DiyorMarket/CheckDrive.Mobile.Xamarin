    <EmbeddedResource Update="Views\ExceptionPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\RoadMapPage.xaml">
